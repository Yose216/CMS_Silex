{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
{% for article in articles %}
<article class="col-lg-offset-0 col-lg-10 col-lg-offset-2">
    <h2><a class="articleTitle col-lg-offset-5" href="{{ path('article', { 'id': article.id }) }}">{{ article.title }}</a></h2>
    <p class="col-lg-12">{{ article.content }}</p>
</article>
{% endfor %}
{% endblock %}